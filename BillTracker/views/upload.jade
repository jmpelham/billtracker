extends layout

block content

	form(action="/upload", method="post", enctype="multipart/form-data")
		input(type="file", name"csvFile")
		input(type="submit", value="Upload", disabled)

	script.
		$('input:file').change(
			function(){
				if ($(this).val()) {
					$('input:submit').attr('disabled',false)
				}
			}
		);